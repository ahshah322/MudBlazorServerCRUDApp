@using MudBlazor

<MudPaper>
    <MudDataGrid T="DataItem" Items="_items" @ref="_dataGrid" Filterable FilterMode="DataGridFilterMode.ColumnFilterRow">
        <Columns>
            <PropertyColumn Property="x => x.Column1" Title="Column 1" />
            <PropertyColumn Property="x => x.Column2" Title="Column 2" />
        </Columns>
    </MudDataGrid>
</MudPaper>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    private MudDataGrid<DataItem> _dataGrid;
    private List<DataItem> _items;

    protected override void OnInitialized()
    {
        _items = GetDataItems();
    }

    private List<DataItem> GetDataItems()
    {
        // Replace with your data source
        return new List<DataItem>
        {
            new DataItem { Column1 = "Item 1", Column2 = "Category 1" },
            new DataItem { Column1 = "Item 2", Column2 = "Category 2" },
            new DataItem { Column1 = "Item 3", Column2 = "Category 3" },
        };
    }

    public class DataItem
    {
        public string Column1 { get; set; }
        public string Column2 { get; set; }
    }
}

